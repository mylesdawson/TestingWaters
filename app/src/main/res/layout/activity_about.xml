<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.myles.testingwaters.AboutActivity">
    <LinearLayout
        android:id="@+id/activity_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorLight">

        <TextView
            android:paddingTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:textSize="32sp"
            android:textAlignment="center"/>

        <TextView
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_me"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/the_grand_canyon"
                android:layout_weight="1"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/grand_canyon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="16dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/the_tulum_ruins"/>
            <ImageView
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:src="@drawable/tulum_mayan_ruins" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="16dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/yellowstone_park"/>
            <ImageView
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:src="@drawable/yellowstone_national_park" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">

            <TextView
                android:paddingLeft="16dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kokanee_cabin"/>
            <ImageView
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:src="@drawable/kokanee_glacier_cabin" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
