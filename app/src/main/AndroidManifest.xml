<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myles.testingwaters">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/water"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EntryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:parentActivityName=".EntryActivity"
            android:label="Login"/>
        <activity android:name=".GalleryActivity">
            android:parentActivityName=".FlowActivity"
            android:label="Gallery"
        </activity>
        <activity android:name=".SignUpActivity"
            android:parentActivityName=".EntryActivity"
            android:label="Sign Up"/>
        <activity android:name=".FlowActivity">
            android:parentActivityName=".LoginActivity"
            android:label="Flow"/>
        </activity>
        <activity android:name=".HelpActivity"
            android:parentActivityName=".FlowActivity"
            android:label="Help"/>
        <activity android:name=".MenuActivity"
            android:parentActivityName=".FlowActivity"
            android:label="Game Menu"/>
        <activity android:name=".SquareActivity"
            android:parentActivityName=".MenuActivity"
            android:label="Square Game"
            android:screenOrientation="landscape"/>
        <activity android:name=".TriangleActivity"
            android:parentActivityName=".MenuActivity"
            android:label="Triangle Game"
            android:screenOrientation="landscape"/>
    </application>

</manifest>